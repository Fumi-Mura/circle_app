<%= render 'shared/error_messages' %>

<p>コメントが送れます</p>
<div class="comment">
  <%= form_for comment do |f| %>
    <%= f.hidden_field :blog_id %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, :placeholder => "名前を入力してください(※30文字以内)", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment,:placeholder => "コメント内容を記述してください(※100文字以内)", class: 'form-control' %>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>