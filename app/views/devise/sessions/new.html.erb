<section class="title">
  <h1 class="title">
    ログイン
  </h1>  
</section>

<section class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "label" %>
      <p class=" has-icons-left">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input neumorphism__concave" %>
      <span class="is-left">
        <i class="fas fa-envelope"></i>
      </span>
      </p>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "label" %>
      <p class="has-icons-left">
      <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", class: "input neumorphism__concave" %>
        <span class="is-left">
          <i class="fas fa-lock"></i>
        </span>
      </p>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "ログイン", class: "button neumorphism__convex red" %>
    </div>
    <%= render "/shared/guest_login" %>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
