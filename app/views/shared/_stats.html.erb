<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>", style="margin: 0 10px ;">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    フォロー中
  </a>
  <a href="<%= followers_user_path(@user) %>", style="margin: 0 10px ;">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>
